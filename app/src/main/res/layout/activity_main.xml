<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="es.grupogo.playgroundsdk.MainActivity">

    <es.grupogo.playgroundsdk.DoButton
        android:id="@+id/button_do"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:tint="#feafea"
        app:query="android"/>

    <es.grupogo.playgroundsdk.widget.ActionsPagerView
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:query_widget=""
        app:num_actions_widget="3"
        app:latitude_widget="40.489353842"
        app:longitude_widget="-3.6827461"/>

</RelativeLayout>
